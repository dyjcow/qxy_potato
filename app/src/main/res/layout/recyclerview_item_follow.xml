<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="17dp"
        android:src="@mipmap/nophoto"
        app:shapeAppearance="@style/CircleStyle" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="啊啊啊啊啊啊啊啊"
        android:textColor="#1A1A1A" />

    <TextView
        android:id="@+id/address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/avatar" />

    <TextView
        android:id="@+id/is_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已关注"
        android:paddingVertical="5dp"
        android:paddingHorizontal="12dp"
        android:textSize="16sp"
        android:background="@drawable/home_textview"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@id/gender"/>

    <ImageView
        android:id="@+id/gender"
        android:layout_width="20dp"
        android:layout_height="@dimen/dk_dp_20"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/home_man" />

</RelativeLayout>