<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_background"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:scaleType="fitXY"
        android:src="@mipmap/movie_rank" />

    <ImageButton
        android:id="@+id/imagebutton_back"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignStart="@id/imageview_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@mipmap/back" />

    <ImageButton
        android:id="@+id/imagebutton_share"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignEnd="@id/imageview_background"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="17dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@mipmap/share" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablelayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/imageview_background"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorAnimationDuration="1000"
        app:tabIndicatorColor="#1A1A1A"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="#F2F2F2"
        app:tabSelectedTextColor="#1A1A1A"
        app:tabTextAppearance="@style/tab_text">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_theatrical_films"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="院线电影" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_web_films"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="网络电影" />

    </com.google.android.material.tabs.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tablelayout"
        android:background="#E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/tablelayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_rank_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="本周榜|更新于8月12日 12:00" />

        <TextView
            android:id="@+id/textview_rank_rule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="榜单规则"
            android:textColor="#DF3460" />

    </LinearLayout>

</RelativeLayout>